#page_header
  %h2
    Edit your Account

#page_body
  = error_messages_for :user
  - semantic_form_for resource_name, resource, :url => registration_path(resource_name), :html => {:method => :put} do |f|
    - f.inputs do
      = f.input :email, :example => "johnsmith@gmail.com", :required => false
      = f.input :login, :label => "Profile url", :example => "#{@site.url}/profile_url", :required => false
      = f.input :time_zone
      - f.inputs :for => :profile do |p|
        = p.input :first_name
        = p.input :last_name
      = f.input :password
      = f.input :current_password, :required => true, :label => "Current Password", :hint => "<i>we need your current password to confirm your changes</i>", :input_html => {:class => "form_standout"}
    - f.buttons do
      = f.commit_button :label => "Update Account", :button_html => {:class => "green"}
      %li
        = link_to "Cancel", account_url, :class => "red"