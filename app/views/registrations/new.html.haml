= render :partial => "shared/notice_invite_required"

#page_header
  %h2
    Sign up for an Account

#page_body
  = error_messages_for :user
  - semantic_form_for resource_name, resource, :url => registration_path(resource_name) do |f|
    - f.inputs "Sign up for an Account" do
      = f.input :email, :example => "johnsmith@gmail.com"
      = f.input :login, :label => "Profile url"
      = f.input :password
      = f.input :password_confirmation, :required => true
    - f.buttons do
      = f.commit_button :label => "Sign Up", :button_html => {:class => "green"}